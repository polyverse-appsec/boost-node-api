{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Serverless Offline",
            "type": "node",
            "request": "launch",
            "args": [
                "offline",
                "--noTimeout",
            ],
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/serverless",
            "env": {
                "NODE_ENV": "development",
                "SIMULATE_OPENAI_UPLOAD": "true",
                "ONE_AI_SPEC": "true",
            },
            "console": "integratedTerminal",
            "sourceMaps": true,
            "skipFiles": [
                "node_modules/@smithy/**",
            ]
        },
        {
            "name": "Upload User Project Data",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/scripts/create_project.py",
            "cwd": "${workspaceFolder}/../summarizer",
            "args": [
                "--email",
                "aaron@polyverse.com",
                "--github_uri",
                "https://github.com/polyverse-appsec/sara"
            ],
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ]
}
